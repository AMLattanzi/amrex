# Make for Linux

ifeq ($(COMP),KCC)
CXX      = KCC
CXXOPTF += -O3 +K3 -g3
CXXDEBF += +K0
FULLWARN := --strict_warnings
override XTRADEFS += -DBL_USE_NEW_HFILES
endif

FC  = f77 -fno-second-underscore
CPP    = gcc -E -x c++
FDEBF += -g


#override XTRALIBS +=  -lf2c
override XTRALIBS += -lg2c
override XTRALIBS +=   -lm
